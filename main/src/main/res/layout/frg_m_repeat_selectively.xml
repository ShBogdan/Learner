<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/my_background"
        android:baselineAligned="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_1">
                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/today_repetition"
                        android:id="@+id/btn_repeat_day1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_2"
                    android:layout_marginTop="-5dp">

                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_repetition"
                        android:id="@+id/btn_repeat_day2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_3"
                    android:layout_marginTop="-5dp">
                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/second_repetition"
                        android:id="@+id/btn_repeat_day3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_4"
                    android:layout_marginTop="-5dp">
                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/third_repetition"
                        android:id="@+id/btn_repeat_day21"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_5"
                    android:layout_marginTop="-5dp">
                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fourth_repetition"
                        android:id="@+id/btn_repeat_day90"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_7"
                    android:layout_marginTop="-5dp">
                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calendar"
                        android:id="@+id/btn_calendar"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:id="@+id/card_view_6"
                    android:layout_marginTop="-5dp">
                    <com.rey.material.widget.Button
                        android:background="@color/my_background"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/all_words"
                        android:id="@+id/btn_all_words"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="bottom"
        android:layout_marginBottom="18dp"
        android:layout_weight="1">

    </LinearLayout>
</LinearLayout>