<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@color/my_background"
    android:baselineAligned="false">

    <Button
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Повторение сегодня"
            android:id="@+id/btn_repeat_day1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyle"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Первое повторение(2 день)"
            android:id="@+id/btn_repeat_day2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyle"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Второе повторение(3 день)"
            android:id="@+id/btn_repeat_day3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyle"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Третье повторение(21 день)"
            android:id="@+id/btn_repeat_day21"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyle"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Четвертое повторение(90 день)"
            android:id="@+id/btn_repeat_day90"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyle"/>
    <!--<Button-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Календарь"-->
            <!--android:id="@+id/btn_calendar"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="@drawable/buttonstyle"/>-->
    <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Все слова"
            android:id="@+id/btn_all_words"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyle"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="22dp"
            >
    </LinearLayout>
    <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Учить слова в порядке русский-ангийский"
            android:id="@+id/changeWordPlace"
            android:checked="false"
            android:textSize="12sp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="изучено"
                android:id="@+id/tv_learned"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="известно ранее"
                android:id="@+id/tv_known"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:layout_marginLeft="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>