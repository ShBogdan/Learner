<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frgAddWord"
    android:background="@color/my_background"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp" >



    </LinearLayout>
    <LinearLayout

        android:id="@+id/btn_audio"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="6dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Английское слово"
                android:textStyle="bold"
                android:id="@+id/tv_english"
                android:layout_above="@+id/tv_transcription"
                android:layout_alignLeft="@+id/tv_russian"
                android:layout_alignStart="@+id/tv_russian"
                android:layout_gravity="center_horizontal"
                android:textSize="28sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Транскрипция"
                android:id="@+id/tv_transcription"
                android:layout_above="@+id/tv_russian"
                android:layout_alignLeft="@+id/tv_russian"
                android:layout_alignStart="@+id/tv_russian"
                android:textSize="18sp"
                android:textColor="#ff282889"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Первод"
                android:id="@+id/tv_russian"
                android:layout_above="@+id/btn_audio"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="#ff3c3c3c"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:layout_marginBottom="18dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/card_shadow2"
                android:orientation="vertical" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:background="@color/my_background">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/card_shadow1"
                android:layout_height="1dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:background="@color/my_background" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/card_shadow2" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@color/my_background" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/card_shadow2"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@color/card_shadow1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/card_shadow1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@color/my_background"></LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btn_know"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Знаю"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="18dp"
                android:gravity="bottom"
                android:textSize="26sp"
                android:textColor="@drawable/tv_btn_style"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_unknown"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Не знаю"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="bottom|right"
                android:textSize="26sp"
                android:textColor="@drawable/tv_btn_style"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>