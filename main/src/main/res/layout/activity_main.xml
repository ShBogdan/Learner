<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ff6abfff">
        <Button
                android:id="@+id/btn_toMain"
                android:text="На главную"
                android:layout_weight="1"
                android:onClick="onButtonSelected"
                android:layout_marginRight="-4dp"
                android:layout_marginLeft="-4.5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3.5dp" android:textSize="15dp"/>
        <Button
                android:id="@+id/btn_add"
                android:text="Найти слово"
                android:layout_weight="1"
                android:onClick="onButtonSelected"
                android:layout_marginRight="-4dp"
                android:layout_marginLeft="-4.5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3.5dp" android:textSize="15dp"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff6abfff">
    </FrameLayout>
</LinearLayout>
