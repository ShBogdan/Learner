<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="300dp"
              android:background="@drawable/dialog_bg"

              android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/dialog_bg"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/englishWord"
                android:layout_gravity="center_horizontal"
                android:text="englishWord"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/russianWord"
                android:layout_gravity="center_horizontal"
                android:text="russianWord"
                android:gravity="center"/>


            <LinearLayout
                android:background="@color/my_background_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                >
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                    <com.rey.material.widget.Button
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Сохранить"
                        android:id="@+id/btn_save"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        android:layout_weight="1"
                        android:background="@drawable/dialog_btn_l"/>

                <LinearLayout
                    android:background="@color/my_background_1"
                    android:orientation="horizontal"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                </LinearLayout>

                    <com.rey.material.widget.Button
                        android:background="@drawable/dialog_btn_r"
                        style="@style/Material.Drawable.Ripple.Wave.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Отмена"
                        android:id="@+id/btn_cancel"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:rd_enable="true"
                        android:layout_weight="1"/>


            </LinearLayout>

        </LinearLayout>




</LinearLayout>