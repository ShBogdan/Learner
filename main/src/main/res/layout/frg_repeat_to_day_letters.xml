<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/my_background"
    >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10/10"
            android:id="@+id/tvSumWords"
            android:layout_gravity="right|top"
            android:textSize="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/tvSumTry"
            android:layout_gravity="right|center_vertical" />
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Русское слово"
            android:id="@+id/russianWord"
            android:layout_gravity="center_horizontal" android:textSize="40sp"/>


    <LinearLayout
            android:id="@+id/answerBtnFl"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center|bottom">

        <TextView
                android:id="@+id/answerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Английски ответ"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:textSize="25sp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_delete_red"


            />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
        android:layout_weight="1"
        android:layout_gravity="top">
        <LinearLayout
                android:id="@+id/randomLettersLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ответ"
        android:id="@+id/tvCheat"
        android:layout_gravity="center_horizontal|top"
        android:enabled="false"
        android:textSize="25dp"
        android:textColor="@color/my_background"
        android:layout_marginBottom="18dp" />
</LinearLayout>