<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оригинал"
                android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textSize="18dp"
                android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/originTextV" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Перевод"
                android:id="@+id/textView3" android:layout_gravity="center_horizontal" android:textSize="18dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/russianTextV" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/btn_add_to_base"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonstyle"
                />

    </LinearLayout>
</RelativeLayout>