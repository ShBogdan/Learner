<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frgMainMenu"
    android:background="@color/my_background">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/card_view_1">
        <com.rey.material.widget.Button
            android:background="@color/my_background"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/add_new_word"
            android:id="@+id/btn_addMoreWord"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:rd_enable="true"
            android:textSize="22sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/buttonstyle"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_below="@+id/card_view_2"
        android:layout_alignLeft="@+id/card_view_2"
        android:layout_alignStart="@+id/card_view_2"
        android:layout_alignRight="@+id/card_view_2"
        android:layout_alignEnd="@+id/card_view_2"
        android:id="@+id/card_view_3"
        android:layout_marginTop="-5dp">
        <com.rey.material.widget.Button
            android:background="@color/my_background"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/repeat_studied"
            android:id="@+id/btn_repeat"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:rd_enable="true"
            android:textSize="22sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonstyle"
        android:orientation="horizontal"
        ads:cardCornerRadius="3dp"
        ads:cardElevation="5dp"
        ads:cardUseCompatPadding="true"
        android:id="@+id/card_view_2"
        android:layout_below="@+id/card_view_1"
        android:layout_alignLeft="@+id/card_view_1"
        android:layout_alignStart="@+id/card_view_1">
        <com.rey.material.widget.Button
            android:background="@color/my_background"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/learn_today"
            android:id="@+id/btn_learnToday"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:rd_enable="true"
            android:textSize="22sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        ads:cardBackgroundColor="@color/buyIt"
        android:orientation="horizontal"
        ads:cardCornerRadius="2dp"
        ads:cardElevation="3dp"
        ads:cardUseCompatPadding="true"
        android:id="@+id/card_view_4"
        android:layout_below="@+id/card_view_3"
        android:layout_alignRight="@+id/card_view_3"
        android:layout_alignEnd="@+id/card_view_3"
        android:layout_alignLeft="@+id/card_view_3"
        android:layout_alignStart="@+id/card_view_3">
        <com.rey.material.widget.Button
            android:textSize="22sp"
            android:background="@color/buyIt"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_buy"
            android:id="@+id/btn_buyIt"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:rd_enable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttons"
        ads:cardBackgroundColor="@color/main_button"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        ads:cardCornerRadius="2dp"
        ads:cardElevation="6dp"
        ads:cardUseCompatPadding="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <com.rey.material.widget.Button
                android:background="@color/main_button"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_info"
                android:text="Info"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                app:rd_enable="true"
                android:textSize="26sp"/>

            <LinearLayout
                android:background="@color/my_background_1"
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="match_parent">
            </LinearLayout>

            <com.rey.material.widget.Button
                android:background="@color/main_button"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_like"
                android:text="Like!"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                app:rd_enable="true"
                android:textSize="26sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>