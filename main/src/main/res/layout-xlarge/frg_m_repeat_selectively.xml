<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@color/my_background"
              android:baselineAligned="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_1">
                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/today_repetition"
                    android:id="@+id/btn_repeat_day1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_2"
                android:layout_marginTop="-5dp">

                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/first_repetition"
                    android:id="@+id/btn_repeat_day2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_3"
                android:layout_marginTop="-5dp">
                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/second_repetition"
                    android:id="@+id/btn_repeat_day3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_4"
                android:layout_marginTop="-5dp">
                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/third_repetition"
                    android:id="@+id/btn_repeat_day21"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_5"
                android:layout_marginTop="-5dp">
                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/fourth_repetition"
                    android:id="@+id/btn_repeat_day90"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_7"
                android:layout_marginTop="-5dp">
                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/calendar"
                    android:id="@+id/btn_calendar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_6"
                android:layout_marginTop="-5dp">
                <com.rey.material.widget.Button
                    android:background="@color/my_background"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/all_words"
                    android:id="@+id/btn_all_words"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:rd_enable="true"
                    android:textSize="22sp"/>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom"
        android:layout_marginBottom="18dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_speech"
                android:id="@+id/autoSpeech"
                android:checked="false"
                android:textSize="20sp"
                />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Learning_words_in_the_order_translate_original"
                android:id="@+id/changeWordPlace"
                android:checked="false"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/learned_learn"
                android:id="@+id/tv_learned"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/known_words"
                android:id="@+id/tv_known"
                android:layout_gravity="bottom"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:foregroundGravity="bottom">
    </com.google.android.gms.ads.AdView>
</LinearLayout>